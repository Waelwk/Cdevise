<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.shakirul.cdevise.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A9DDF4"
        android:orientation="vertical">

        <EditText
            android:id="@+id/usd"
            android:layout_width="249dp"
            android:layout_height="89dp"
            android:backgroundTint="#9C27B0"
            android:hint="dollar"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_marginStart="249dp"
            android:layout_marginLeft="249dp"
            android:layout_marginTop="-67dp"
            android:onClick="click"
            android:text="USD  to  tnd"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <EditText
        android:id="@+id/tnd"
        android:layout_width="252dp"
        android:layout_height="68dp"
        android:layout_below="@+id/submit"
        android:layout_marginTop="161dp"
        android:backgroundTint="#9C27B0"
        android:hint="tnd"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/submit2"
        android:layout_width="164dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tnd"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="247dp"
        android:layout_marginLeft="247dp"
        android:layout_marginTop="-75dp"
        android:onClick="click2"
        android:text="tnd to usd"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/reset"
        android:layout_width="200dp"
        android:layout_height="92dp"
        android:layout_below="@+id/submit2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="67dp"
        android:onClick="reset"
        android:text="RESET"
        tools:ignore="HardcodedText" />

</RelativeLayout>
